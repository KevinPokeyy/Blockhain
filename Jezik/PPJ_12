

BNF:

PROGRAM := seperator({) BODY seperator(})
BODY := variable = OPERATIONS BODY | for RESERVED_FOR BODY | if RESERVED_IF BODY | action ACTION BODY | epsilon

OPERATIONS := OPERATOR operator OPERATIONS | OPERATOR | "string"
OPERATOR := number | variable

CONDITION := OPERATIONS checker OPERATIONS


RESERVED_FOR := FOR_CONDITION seperator({) BODY seperator({)
FOR_CONDITION := seperator(() CONDITION seperator(() variable = OPERATIONS seperator()) seperator())

RESERVED_IF := seperator(() CONDITION seperator()) seperator({) BODY seperator(})

ACTION := BuyItem seperator(() BUY_ITEM_ARGS seperator()) | SellItem seperator(() SELL_ITEM_ARGS seperator()) |
            TransferMoney seperator(() TRANSFER_MONEY_ARGS seperator()) | TransferItem seperator(() TRANSFER_ITEM_ARGS seperator())

BUT_ITEM_ARGS := variable seperator(,) OPERATOR seperator(,) variable
SELL_ITEM_ARGS := variable seperator(,) variable
TRANSFER_MONEY_ARGS := variable seperator(,) variable seperator(,) OPERATOR
TRANSFER_ITEM_ARGS := variable seperator(,) variable seperator(,) variable



Pametne pogodbe:


#Pogodba za obravnavo kupovanja izdelkov/stvari iz trgovine v igri. Igralec bo iz seznama izbral stvar, katero želi kupiti
in iz svoje denarnice plačal s denarjem. Pogodba se izvede samo če ima igralec dovolj denarja v svoji denarnici.

function buy_item(player, money, item){

  if(money>player.money){
    return false
  }
  else{
    player.money.remove(money)
    player.items.add(item)
    return true
  }

} 

#Pogodba za obravnavo prodaje izdelkov/stvari trgovini ali trgovcu v igri. Igralec bo iz svojega seznama izdelkov izbral stvar, katero
želi prodati, in jo po vnaprej določeni ceni proda. Pogodba se izvede samo če ima igralec izdelek v svoji inventuri.

function  sell_item(player, item){

  if(player.items.finditem(item)==false){
    return false

  }
  else{
    player.items.remove(item)
    player.money.add()
    return true
  }



} 

#Pogodba za prenosa denarja med igralci. Pogodba se izvede, samo če ima igralec1 dovolj denarja v svoji denarnici.

function  transfer_money(player1, player2, money){

  if(money>player1.money){
    return false
  }
  else{
    player1.money.remove()
    player2.money.add()
    return true
  }


} 

#Pogodba za prenosa stvari/izdelkov med igralci. Pogodba se izvede samo če ima igralec1 stvar/izdelek v svoji inventuri.

function  transfer_items(player1, player2, item){

  if(player1.finditem(item)==false){
    return false
  }
  else{
    player1.items.remove(item)
    player2.items.add(item)
    return true
  }


} 
